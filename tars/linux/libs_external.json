{
	"name":"external libraries",

	"base":{
		"link_params" : "",
		"out_libfile" : "",
		"link_dynamic" : "",
		"link_static" : "",
		"static" : ["static"],
		"dynamic" : "",
		"from_obj" : 0,

		"compiler" : "gcc"
	},

	"targets":{
		"libz" : 
		{
			"comp_params":"-fPIC -DPIC -D_LARGEFILE64_SOURCE=1 -DHAVE_HIDDEN",
			"include" : [ "include/zlib" ],
			"obj" : "obj/zlib",
			"out" : "bin",
			"src" : [ "src/zlib/*.c" ],
			"type" : "DLL"
		},
		
		"libcdf" : 
		{
			"comp_params":"-g3 -ffast-math -Wno-discarded-qualifiers",
			"include" : [ "include" ],
			"obj" : "obj/cdf",
			"out" : "static",
			"src" : [ "src/cdf/*.c" ],
			"type" : "STATIC"
		},

		"cdftest" : 
		{
			"comp_params" :"-g3",
			"link_static":["cdf"],
			"include" : [ "include" ],
			"obj" : "obj/cdf",
			"out" : "bin",
			"src" : [ "src/cdf/test/cdftest.c" ],
			"type" : "EXE"
		}
	}
}
